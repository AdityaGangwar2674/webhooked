{
  "extends": "next/core-web-vitals",
  "ignorePatterns": [".next/**/*", "components/shadcn/*"],
  "rules": {
    "indent": ["error", 4],
    "semi": ["error", "always"],
    "prefer-const": "off",
    "camelcase": ["error", { "ignoreGlobals": true }],
    "no-nested-ternary": "error",
    "no-eval": "error",
    "quotes": ["error", "single"]
  }
}
